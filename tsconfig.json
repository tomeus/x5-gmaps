{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declarationDir": "dist/@types",
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "vite/client",
      "googlemaps",
    ],
    "plugins": [
      {
        "name": "@vuedx/typescript-plugin-vue"
      }
    ],
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
  },
  "include": [
    "src"
  ]
}